<h1>Restaurants <small><%= page_entries_info @restaurants %></small></h1>

<div id="restaurant-search">
  <%= form_tag restaurants_path, method: :get, authentication: false, id: 'search-form' do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %> 
</div>
<%= paginate @restaurants %>
<div id="restaurants">
	<%= render @restaurants %>
</div>
